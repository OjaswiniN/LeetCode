class Solution {
public:
    bool detectCapitalUse(string word) {
        int cap=0, small=0;
        for(int i=0;i<word.size();i++){
            if(word[i]>='A' && word[i]<='Z'){
                cap++;
            }
            else{
                small++;
            }
        }
        if(cap==word.size() || small==word.size()){
            return true;
        }
        else if(word[0]>='A' && word[0]<='Z' && small==word.size()-1){
            return true;
        }
        else{
            return false;
        }


        
    }
};
