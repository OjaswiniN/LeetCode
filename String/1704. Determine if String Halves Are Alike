class Solution {
public:
        bool halvesAreAlike(string s) {
        int l=0,n=s.length();
        int mid = n/2;
        for(int i=0;i<n;i++){
            s[i]=tolower(s[i]);
                if(s[i]=='a'||s[i]=='e'||s[i]=='i'||s[i]=='o' || s[i]=='u'){
                    if(i<mid)l++;
                    else l--;
                }
            }
            
        return l==0;
        
    }
};
