// Two pointer Approach

class Solution {
public:
    string mergeAlternately(string word1, string word2) {
      string ans ="";
      int i = 0, j = 0, M = word1.size(), N = word2.size();
        while (i < M || j < N) {
            if (i < M) ans += word1[i++];
            if (j < N) ans += word2[j++];
        }
        return ans;
         
        
    }
};
