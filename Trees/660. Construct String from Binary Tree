class Solution {
public:
    string tree2str(TreeNode* root) {
        if (!root) {
            return "";
        }
        string builder = to_string(root->val);
        if (root->left != NULL) {
            builder += "(" + tree2str(root->left) + ")";
        }
        if (root->right != NULL) {
            if (root->left == NULL) {
                builder += "()";
            }
            builder += "(" + tree2str(root->right) + ")";
        }
        return builder; 
    }
};
