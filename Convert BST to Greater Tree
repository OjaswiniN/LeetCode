class Solution {
private:
     int sum = 0;
    public :
    TreeNode* convertBST(TreeNode* root) {
        helper(root);
        return root;        
    }
    void helper(TreeNode* root) {
        if (root == NULL) return;
        if (root->right)
        helper(root->right);
        sum += root->val;
        root->val = sum;
        helper(root->left);        
    }
};

