class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
         ListNode* temp = head;
         size_t count = 0;        
         while (temp)
        {
            ++count;
            temp = temp->next;
        }
        
        int index = count - n;
        
        if(index == 0)
            return head->next;
        
        temp = head;
        for(int i = 0; i < index - 1; i++)
        {
            temp = temp->next;
        }
        temp->next = temp->next->next;
        
        return head;
    }
};
