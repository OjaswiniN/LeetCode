class Solution {
public:
    double average(vector<int>& salary) {
      int n = salary.size();
      int sum = 0;
      int mini = INT_MAX;
      int maxi = INT_MIN;
      for(int i=0;i<salary.size();i++) {
            sum += salary[i];
            mini = min(mini,salary[i]);
            maxi =  max(maxi,salary[i]);
        }
      double ans=(sum-mini-maxi)/((n-2)*1.0);
      if(n>2)
          return ans;
      else 
            return 0;
        
    }
};
