class Solution {
public:
    bool checkPossibility(vector<int>& arr) {
        int check = 0;
        for(int i = 1; i < arr.size(); i++){
            if(arr[i-1] > arr[i]){
                if (++check > 1) return false;
                else if(i-2<0 || arr[i-2] <= arr[i])
                    arr[i-1] = arr[i];  
                else 
                    arr[i] = arr[i-1];                                                
            }
        }
        return true;
    }
};
